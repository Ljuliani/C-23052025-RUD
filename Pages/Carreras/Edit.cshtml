@page
@model C_23052025_RUD.Pages.Carreras.EditModel
@{
}

<form method="post">

    <input type="hidden" asp-for="Carrera.Id" />
    
    <div class="form.group">
        <label asp-for="Carrera.Nombre"></label>
        <input asp-for="Carrera.Nombre" class="form-control" />
    </div>

    <div class="form.group">
        <label asp-for="Carrera.Duracionaños"></label>
        <input asp-for="Carrera.Duracionaños" class="form-control" />
    </div>

    <div class="form.group">
        <label asp-for="Carrera.Titulootorgado"></label>
        <input asp-for="Carrera.Titulootorgado" class="form-control" />
    </div>

    <div class="form-group">
        <display>Modality</display>
        <select asp-for="Carrera.Modalidad"
                asp-items="@(new SelectList(Model.Modalidades))"
                class="form-control">
            <option value="">Select a modality</option>
        </select>
        <span asp-validation-for="Carrera.Modalidad" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>







</form>
