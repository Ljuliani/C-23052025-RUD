@page
@model C_23052025_RUD.Pages.Carreras.CreateModel
@{
	<form method="post">
	<div class="form-group">
			<display>Name</display>
		<input asp-for="Carrera.Nombre" class="form-control" />
		<span asp-validation-for="Carrera.Nombre" class="text-danger"></span>
	</div>

	<div class="form-group">
			<display>Duration (in Ages)</display>
			<input asp-for="Carrera.Duracionaños" class="form-control" />
			<span asp-validation-for="Carrera.Duracionaños" class="text-danger"></span>
	</div>
	<div class="form-group">
			<display>Title awarded</display>
		<input asp-for="Carrera.Titulootorgado" class="form-control" />
		<span asp-validation-for="Carrera.Titulootorgado" class="text-danger"></span>
	</div>
	<div class="form-group">
			<display>Modality</display>
		<input asp-for="Carrera.Modalidad" class="form-control" />
		<span asp-validation-for="Carrera.Modalidad" class="text-danger"></span>
	</div>
    <button type="submit" class="btn btn-primary">Save and Send</button>
	</form>
}
